extends layout/default

block view
    section.ftco-section.bg-light
        .container
        .row.justify-content-center
            .col-md-6
                .clearfix
                    h1.float-left.display-3.mr-4.text-danger=error.status
                    h4.pt-3 Oops! We're lost.
                    p.text-muted=error.message
                .input-prepend.input-group
                    .input-group-prepend
                        span.input-group-text
                            i.fa.fa-search
                    input#prependedInput.form-control(size='16', type='text', placeholder='What are you looking for?')
                    span.input-group-append
                        button.btn.btn-info(type='button') Search
