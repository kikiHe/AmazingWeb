#loginModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='loginModalLabel', aria-hidden='true')
    .modal-dialog.modal-dialog-centered.modal-lg(role='document')
        .modal-content
            .modal-header.border-0.position-fixed(style='z-index:1')
                button.close(type='button', data-dismiss='modal', aria-label='Close')
                    span(aria-hidden='true') Ã—
            .modal-body.p-0
                .card-group
                    .card.border-0.p-4
                        .card-body
                            h1 Login
                            p.text-muted Sign In to your account
                            form#login(method='post', action='/login')
                                .input-group.mb-3
                                    .input-group-prepend
                                        span.input-group-text
                                            i.icon-user
                                    input.form-control#username(type='text', name='username' placeholder='Username', required)
                                .input-group.mb-4
                                    .input-group-prepend
                                        span.input-group-text
                                            i.icon-lock
                                    input.form-control#password(type='password', name='password', placeholder='Password', required)
                                .row
                                    .col-6
                                        button.btn.btn-primary.px-4(type='submit') Login
                                    .col-6.text-right
                                        button.btn.btn-link.px-0(type='button') Forgot password?
                    .card.text-white.bg-primary.border-0.py-5.d-md-down-none
                        .card-body.text-center
                            div
                                h2 Sign up
                                p
                                    | Be a memeber and enjoy your eating!
                                a(href='/register')
                                    button.btn.btn-primary.active.mt-3(type='button') Register Now!
