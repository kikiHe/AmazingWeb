mixin separate(spec)
    - var divider = Math.ceil(spec.length / 2)
    .col-lg-6
        each item, i in spec
            if i < divider
                +add_spec(item, i % 2 === 0)
    .col-lg-6
        each item, i in spec
            if i >= divider
                +add_spec(item, (i - divider) % 2 === 0)
mixin add_spec(item, reverse)
    .block-3.d-md-flex.ftco-animate
        .image(class=(reverse ? 'order-last' : 'order-first') style='background-image: url(' + item.image + ');')
        .text.text-center.order-first
            h2.heading=item.title
            p=item.intro
            span.price='from $' + parseFloat(item.price).toFixed(2)
if partial
    section.ftco-section.parallax-img(style="background-image: url('/images/bg_3.jpg');", data-stellar-background-ratio='0.5')
        .overlay
        .container
            .row.justify-content-center.mb-5.pb-5
                .col-md-7.text-center.heading-section.heading-section-white.ftco-animate
                    h2 Our Specialties
    section.ftco-section.bg-light
        .container.special-dish
            .row.d-flex.no-gutters
                +separate(inits.special.slice(0, 4))