mixin add_menu(meal)
    .menuDraggable
        .menus.d-flex.ftco-animate
            .menu-img(style='background-image: url(' + meal.image + ')')
            .text.d-flex
                .one-half
                    h3=meal.title
                    p
                        each item, j in meal.consist
                            span=item
                            if j !== meal.consist.length - 1
                                =', '
                .one-forth
                    span.price='$' + meal.price
section.ftco-section.bg-light#main
    .container
        .row.justify-content-center.mb-5.pb-5
            .col-md-7.text-center.heading-section.ftco-animate
                span.subheading Our Menu
                h2 Discover Our Exclusive Menu
        .row
            .col-md-12.dish-menu
                #menu-tab.nav.nav-pills.justify-content-center.ftco-animate(role='tablist', aria-orientation='vertical')
                    a#menu-main-tab.nav-link.py-3.px-4.active(data-toggle='pill', href='#menu-main', role='tab', aria-controls='menu-main', aria-selected='true')
                        span.flaticon-meat
                        |  Main
                    a#menu-dessert-tab.nav-link.py-3.px-4(data-toggle='pill', href='#menu-dessert', role='tab', aria-controls='menu-dessert', aria-selected='false')
                        span.flaticon-cutlery
                        |  Dessert
                    a#menu-drink-tab.nav-link.py-3.px-4(data-toggle='pill', href='#menu-drink', role='tab', aria-controls='menu-drink', aria-selected='false')
                        span.flaticon-cheers
                        |  Drinks
                #menu-tabContent.tab-content.py-5
                    #menu-main.tab-pane.fade.show.active(role='tabpanel', aria-labelledby='menu-main-tab')
                        .row
                            +separate(inits.menu.main)
                    //- END
                    #menu-dessert.tab-pane.fade(role='tabpanel', aria-labelledby='menu-dessert-tab')
                        .row
                            +separate(inits.menu.dessert)
                    //- END
                    #menu-drink.tab-pane.fade(role='tabpanel', aria-labelledby='menu-drink-tab')
                        .row
                            +separate(inits.menu.drink)
