section.home-slider.owl-carousel
    each item in inits.banner
        .slider-item(style='background-image: url(' + item.image + ');')
            .overlay
            .container
                .row.slider-text.align-items-center.justify-content-center.text-center
                    .col-md-10.col-sm-12.ftco-animate
                        h1.mb-3=item.title
                        p
                            a.btn.btn-primary.btn-outline-white.px-5.py-3(href='/reserve') Book a table
.ftco-section-reservation
    .container
        .row
            .col-md-12.reservation.pt-5.px-5
                .block-17
                    form.d-block.d-lg-flex(action='/reserve', method='post')
                        .fields.d-block.d-lg-flex
                            .textfield-name.one-third
                                input.form-control(type='text', name='name', placeholder='Name', required)
                            .textfield-phone.one-third
                                input.form-control(type='text', name='phone', placeholder='Phone', required)
                            .book-date.one-third
                                input#book_date.form-control(type='text', name='date', placeholder='M/D/YYYY', required)
                            .book-time.one-third
                                input#book_time.form-control(type='text', name='time', placeholder='Time', required)
                            .select-wrap.one-third
                                .icon
                                    span.ion-ios-arrow-down
                                select.form-control(name='person', required)
                                    option(value='1') 1
                                    option(value='2') 2
                                    option(value='3') 3
                                    option(value='n') 4+
                        input.search-submit.btn.btn-primary(type='submit', value='Book a table')
